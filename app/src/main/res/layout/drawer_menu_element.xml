<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout    android:id="@+id/itemsRecyclerViewBacrgrount"

        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.andexert.library.RippleView
        android:id="@+id/rippleView"
        android:layout_width="match_parent"
        app:rv_framerate="5"
        android:layout_height="40dp"
        app:rv_rippleDuration="100"
        rv_centered="true">
        <com.skyfishjy.library.RippleBackground
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RippleAnimation"
            app:rb_color="#ffffff"
            app:rb_radius="20dp"
            app:rb_rippleAmount="4"
            app:rb_duration="1000"
            app:rb_scale="8">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:cardBackgroundColor="@color/RecyclerItemCardBackground"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/DrawericonItemMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:background="@color/green" />

        <TextView
            android:id="@+id/DrawerTextDrawerMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="10dp"
            android:text="SomeMenuItem"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/RecyclerItemCardBackground" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:background="@color/RecyclerItemCardBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView" />
        </com.skyfishjy.library.RippleBackground>

    </com.andexert.library.RippleView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>