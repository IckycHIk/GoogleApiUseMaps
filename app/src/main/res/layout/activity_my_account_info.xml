<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_white"
    tools:context=".Activity.MyAccountInfo">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/BlurImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:scaleType="centerCrop"
            android:src="@drawable/bbbb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.florent37.arclayout.ArcLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:elevation="5dp"
            app:arc_cropDirection="cropOutside"
            app:arc_height="90dp">

            <com.yinglan.shadowimageview.ShadowImageView
                android:id="@+id/userPictures"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="right"
                app:layout_constraintCircleRadius="10dp"
                app:shadowColor="@color/colorAccent"
                app:shadowRound="20dp"
                app:shadowSrc="@drawable/bbbb" />

        </com.github.florent37.arclayout.ArcLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/UserNameInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/UserMailInfo"
            android:text="ыыыыыыы"            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/UserNameInfo" />
    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>